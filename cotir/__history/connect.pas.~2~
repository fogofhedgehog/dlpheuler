unit connect;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, ActiveX, NiApiLib_TLB;

type NIsession=class
public
  session:Tsrvrsession;
  //creation
  constructor create;
  destructor destroy; override;
  //methods
  procedure connect;
  procedure disconnect;
  //events
  procedure onlogin(ASender:Tobject;LoginResult:Integer);
  procedure Onconnectionlost(Asender:TObject);
end;

type
  TForm2 = class(TForm)
    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    Edit4: TEdit;
    Button1: TButton;
    Label1: TLabel;
    Button2: TButton;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    procedure Button1Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure Button2Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form2: TForm2;
  Nis : NiSession;
implementation

{$R *.dfm}
//constructor for session
constructor NIsession.create;
begin
 session:=tsrvrsession.create(nil);
 session.onlogin:=self.onlogin;
 session.onconnectionlost:=self.onconnectionlost;
end;

destructor Nisession.destroy;
begin
  freeandnil(session);
end;

procedure NIsession.connect;
begin
  session.HostAddr:= Form2.Edit1.Text;
  session.HostPort:= strtoint(Form2.edit2.text);
  session.Name:= Form2.edit3.Text;
  session.Password:= Form2.edit4.Text;
  session.Connect1;
end;

procedure NIsession.disconnect;
begin
 session.disconnect1;
end;

procedure TForm2.Button1Click(Sender: TObject);
begin
  Nis.connect;
end;

procedure NIsession.onlogin(Asender:TObject;loginresult:integer);
begin
  Form2.Label1.caption:='Connected';
end;

procedure Nisession.onconnectionlost(Asender:TObject);
begin
  Form2.Label1.caption:='disconnected';
end;

procedure TForm2.FormCreate(Sender: TObject);
begin
  CoInitialize (nil) ;
  Nis:=NISession.Create;
end;

procedure TForm2.Button2Click(Sender: TObject);
begin
 Nis.disconnect;
end;

end.
